{
  "Routes": [
    //User routes
    {
      "DownstreamPathTemplate": "/api/user/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/user/login",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/user/social-login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/user/social-login",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/user/refresh-token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/user/refresh-token",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/user/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/user/register",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/user/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/user/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      }
    },
    {
      "UpstreamPathTemplate": "/api/user/change-password",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/user/change-password",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.user",
          "Port": 80
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      }
    },

    //Category routes
    {
      "UpstreamPathTemplate": "/api/admin/category/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/admin/category/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.catalog",
          "Port": 80
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      }
    },
    {
      "UpstreamPathTemplate": "/api/category/{everything}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/category/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "elly.catalog",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:7000"
  }
}